{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		//"noImplicitAny": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"checkJs": true,
		"noEmit": true,
		"sourceMap": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["types"]
	},
	"include": ["src", "types"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
